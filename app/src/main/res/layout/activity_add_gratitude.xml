<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddGratitudeActivity">

    <EditText
        android:id="@+id/edit_text_gratitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="What was your small moment of gratitude today?"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/image_view_photo_preview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:contentDescription="Gratitude photo preview"
        app:layout_constraintTop_toBottomOf="@id/edit_text_gratitude"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Photo"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/image_view_photo_preview"
        app:layout_constraintStart_toEndOf="@id/image_view_photo_preview"
        app:layout_constraintBottom_toBottomOf="@id/image_view_photo_preview" />

    <Button
        android:id="@+id/button_save_gratitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/image_view_photo_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>