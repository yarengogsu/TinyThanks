<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Takvim Gün İsimleri (Pzt, Sal...) -->
    <style name="CalendarDayText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tech_text_sec</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Takvim Rakamları -->
    <style name="CalendarNumText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tech_text_main</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Bugünün Tarihi (Mavi Yuvarlak) -->
    <style name="CalendarNumSelected" parent="CalendarNumText">
        <item name="android:background">@drawable/bg_entry_badge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>