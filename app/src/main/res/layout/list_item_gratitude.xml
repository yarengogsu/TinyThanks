<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:background="@drawable/bg_gratitude_card">

        <!-- FOTO -->
        <ImageView
            android:id="@+id/item_photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_entry_image"
            android:clipToOutline="true"
            android:contentDescription="Entry photo" />

        <!-- METÄ°N BLOÄžU -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- TARÄ°H -->
            <TextView
                android:id="@+id/item_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov 22, 10:30 AM"
                android:textSize="12sp"
                android:textColor="#9A8FB3" />

            <!-- ÅžÃœKRAN METNÄ° -->
            <TextView
                android:id="@+id/item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Write about your moment..."
                android:textSize="16sp"
                android:textColor="#2D2636"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- FOTO BADGE -->
            <TextView
                android:id="@+id/item_badge_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="ðŸ“¸ Photo attached"
                android:textSize="11sp"
                android:textColor="#5E6B4E"
                android:background="@drawable/bg_entry_badge"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
