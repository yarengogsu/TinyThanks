<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#11AA88FF"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- MINI FLOWER -->
        <com.example.tinythanks.FlowerView
            android:id="@+id/item_flower_view"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="12dp" />

        <!-- TEXT SIDE -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <!-- Week range -->
            <TextView
                android:id="@+id/text_week_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 Oct 2025 - 25 Oct 2025"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- Stats -->
            <TextView
                android:id="@+id/text_week_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Entries: 4 â€¢ Active days: 2"
                android:textSize="13sp"
                android:textColor="#7A555555" />

            <!-- State -->
            <TextView
                android:id="@+id/text_week_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="State: WILTED"
                android:textSize="13sp"
                android:textColor="#7A555555" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
